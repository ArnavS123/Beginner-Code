import turtle

# Set up the turtle window and pen
turtle.Screen()
pen = turtle.Turtle()

# Define a function to draw a heart shape
def draw_heart():
    pen.fillcolor("Red")
    pen.begin_fill()
    pen.left(45)
    pen.forward(100)
    pen.circle(50, 180)
    pen.right(90)
    pen.circle(50, 180)
    pen.forward(100)
    pen.left(45)
    pen.end_fill()

# Move the pen to the starting position
pen.penup()
pen.goto(0, 50)
pen.pendown()

# Draw the heart
draw_heart()

# Move the pen to write the Mother's Day message
pen.penup()
pen.goto(0, -50)
pen.pendown()

# Write the Mother's Day message
pen.write("Happy Mother's Day Amma!", align="center", font=("Arial", 24, "bold"))
